# Database Configuration
POSTGRES_USER=postgres
POSTGRES_PASSWORD=CHANGE_ME_STRONG_PASSWORD_123!
POSTGRES_DB=epileptic_ai
DATABASE_URL=postgresql+psycopg2://postgres:CHANGE_ME_STRONG_PASSWORD_123!@postgres:5432/epileptic_ai

# Redis Configuration
REDIS_URL=redis://redis:6379/0

# Backend Configuration - IMPORTANT: Generate a strong secret key
# You can generate one with: openssl rand -hex 32
SECRET_KEY=CHANGE_ME_GENERATE_STRONG_SECRET_KEY_WITH_OPENSSL
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# ML/AI Configuration
PREDICTION_THRESHOLD=0.7

# Alerts Configuration
ENABLE_SMS_ALERTS=false
ENABLE_PUSH_NOTIFICATIONS=true
ALERT_COOLDOWN_MINUTES=15

